{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "urn:jsonschema:org:cttv:input:model:EvidenceString",
    "title": "CTTV JSON Schema Test Version",
    "properties": {
        "biological_subject": {
            "type": "object",
            "id": "urn:jsonschema:org:cttv:input:model:BiologicalSubject",
            "description": "The biological subject is any biological entity that can be expressed with a miriam URN e.g. miriam:ensembl:ENSG9023124 or miriam:pfam:PF00619",
            "properties": {
                "about": {
                    "type": "array",
                    "required": true,
                    "description": "An array of miriam URNs. For example, if depicting a CTTV target, which is a heteropolymeric protein complex, use: [miriam:uniprot:P251200, miriam:uniprot:P35348, miriam:uniprot:P35368]",
                    "items": {
                        "type": "string",
                        "minItems": 1,
                        "uniqueItems": true,
                        "pattern": "^miriam:.+:.+"
                    }
                },
                "properties": {
                    "type": "object",
                    "id": "urn:jsonschema:org:cttv:input:model:BiologicalSubjectProperties",
                    "properties": {
                        "association_context": {
                            "type": "string",
                            "pattern": "^miriam:cttvexp:.+$",
                            "description": "This field is REQUIRED IF your biological_subject is a CTTV target. i.e. if the regex pattern match in biological_subject is ^miriam:ensembl or ^miriam:uniprot. It must represent a field in the CTTV core 'target' ontology. See https://github.com/CTTV/input_data_format/blob/master/json_schema/cttv_uris_namespaces.md"
                        },
                        "activity": {
                            "type": "string",
                            "pattern": "^miriam:cttvexp:.+$",
                            "description": "This field is REQUIRED IF your biological_subject is a CTTV target. i.e. if the regex pattern match in biological_subject is ^miriam:ensembl or ^miriam:uniprot. The value must represent a field in the CTTV core 'biological activity' ontology. See https://github.com/CTTV/input_data_format/blob/master/json_schema/cttv_uris_namespaces.md"
                        },
                        "experimental_evidence_specific": {
                            "type": "object",
                            "required": false,
                            "description": "Use this to add any string-based key:value pairs that you want to use to describe your biological subject.",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "provenance": {
            "type": "object",
            "required": true,
            "id": "urn:jsonschema:org:cttv:input:model:Provenance",
            "properties": {
                "evidence_codes": {
                    "type": "array",
                    "required": true,
                    "description": "array of evidence codes in this format: miriam:obo:ECO_nnnnnnn",
                    "items": {
                        "type": "string",
                        "pattern": "^miriam:obo:ECO_[0-9]{7,7}$"
                    }
                },
                "association_score": {
                    "type": "object",
                    "required": false,
                    "id": "urn:jsonschema:org:cttv:input:model:AssociationScore",
                    "properties": {
                        "p-value": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1,
                            "required": false
                        },
                        "probability": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1,
                            "required": false
                        }
                    }
                },
                "urls": {
                    "type": "object",
                    "id": "urn:jsonschema:org:cttv:input:model:ProvenanceUrls",
                    "required": false,
                    "properties": {
                        "linkouts": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "id": "urn:jsonschema:org:cttv:input:model:LinkOut",
                                "properties": {
                                    "nice_name": {
                                        "type": "string",
                                        "required": false,
                                        "description": "A nice name for the URL e.g. 'ArrayExpress Experiment overview'"
                                    },
                                    "url": {
                                        "type": "string",
                                        "required": false,
                                        "pattern": "^http.+",
                                        "description": "A foreign URL, which the user can dig into for provenance about the association."
                                    }
                                }
                            }
                        }
                    }
                },
                "properties": {
                    "type": "object",
                    "id": "urn:jsonschema:org:cttv:input:model:ProvenanceProperties",
                    "experimental_evidence_specific": {
                        "type": "object",
                        "required": false,
                        "description": "Use this to add any string-based key:value pairs that you want to use to describe your biological object.",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "evidence_chain": {
                        "id": "urn:jsonschema:org:cttv:input:model:EvidenceChain",
                        "type": "array",
                        "required": false,
                        "items": {
                            "type": "object",
                            "$ref": "urn:jsonschema:org:cttv:input:model:EvidenceString"
                        }
                    }
                },
                "is_associated": {
                    "type": "boolean",
                    "required": true
                },
                "date_asserted": {
                    "type": "string",
                    "format": "date-time",
                    "required": true
                },
                "type": {
                    "type": "object",
                    "id": "urn:jsonschema:org:cttv:input:model:ProvenanceType",
                    "properties": {
                        "expert": {
                            "type": "object",
                            "required": false,
                            "id": "urn:jsonschema:org:cttv:input:model:ProvenanceExpert",
                            "properties": {
                                "statement": {
                                    "type": "string",
                                    "required": false
                                },
                                "author": {
                                    "type": "object",
                                    "required": false,
                                    "id": "urn:jsonschema:org:cttv:input:model:ProvenanceAuthor",
                                    "properties": {
                                        "organization": {
                                            "type": "string",
                                            "required": false
                                        },
                                        "email": {
                                            "required": false,
                                            "type": "string",
                                            "pattern": "^[.]+@[.]+"
                                        },
                                        "name": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "status": {
                                    "type": "boolean"
                                }
                            }
                        },
                        "literature": {
                            "type": "object",
                            "required": false,
                            "id": "urn:jsonschema:org:cttv:input:model:ProvenanceLiterature",
                            "properties": {
                                "pubmed_refs": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer",
                                        "minItems": 1,
                                        "uniqueItems": true
                                    }
                                }
                            }
                        },
                        "database": {
                            "type": "object",
                            "required": false,
                            "id": "urn:jsonschema:org:cttv:input:model:ProvenanceDatabase",
                            "properties": {
                                "dbxref": {
                                    "type": "object",
                                    "id": "urn:jsonschema:org:cttv:input:model:ProvenanceDatabaseXRef",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "url": {
                                            "type": "string"
                                        },
                                        "version": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "id": {
                                    "type": "string"
                                },
                                "version": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "biological_object": {
            "type": "object",
            "id": "urn:jsonschema:org:cttv:input:model:BiologicalObject",
            "required": true,
            "description": "The biological object is any biological entity that can be expressed with a miriam URN e.g. miriam:ensembl:ENSG9023124 or miriam:pfam:PF00619",
            "properties": {
                "about": {
                    "type": "array",
                    "description": "An array of miriam URNs. For example, if denoting a set of EFO phenotypes: [miriam:efo:EFO_0000537, miriam:efo:EFO_0000522]",
                    "required": true,
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "minItems": 1,
                        "uniqueItems": true,
                        "pattern": "^miriam:.+:.+$"
                    }
                },
                "properties": {
                    "type": "object",
                    "required": false,
                    "id": "urn:jsonschema:org:cttv:input:model:BiologicalObjectProperties",
                    "properties": {
                        "biosamples": {
                            "type": "array",
                            "required": false,
                            "description": "An array of affected tissues expressed using its EFO term e.g. miriam:obo:UBERON_0004535, the EFO resource ID for cardiovascular system",
                            "items": {
                                "type": "string",
                                "minItems": 1,
                                "uniqueItems": true,
                                "pattern": "^miriam:.+:.+"
                            }
                        },
                        "experimental_evidence_specific": {
                            "type": "object",
                            "required": false,
                            "description": "Use this to add any string-based key:value pairs that you want to use to describe your biological object.",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}